{
  "manifest_version": 3,
  "name": "Glossary Tool",
  "version": "1.0",
  "description": "Chrome Extension",
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["script.js","main.js"],
      "css":["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Glossary Tool",
    "default_popup": "popup.html"
  }
}